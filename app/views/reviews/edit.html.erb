<div class="container-fluid">
  <h1>Edit Review</h1>

  <%= simple_form_for([@restaurant, @review]) do |f| %>
      <div id="rating-form">
        <label>Rating</label>
      </div>
      <%= f.input :comment %>
      <%= f.button :submit %>
  <% end %>
</div>

<script>
    $('#rating-form').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>